<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.aleya.inventory.inventory"
    android:background="#00B8FF">

    <TextView
        android:text="User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="53dp"
        android:background="#fff"
        android:ems="10"
        android:gravity="center"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#000" />

    <EditText
        android:id="@+id/editLogin"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editName"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:ems="10"
        android:gravity="center"
        android:hint="Login"
        android:inputType="textPersonName"
        android:textColor="#000" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editLogin"
        android:layout_marginTop="14dp"
        android:background="#fff"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textColor="#000" />

    <EditText
        android:id="@+id/editRole"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editPassword"
        android:layout_marginTop="18dp"
        android:background="#fff"
        android:ems="10"
        android:gravity="center"
        android:hint="Role Id"
        android:inputType="textPersonName"
        android:textColor="#000" />

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/homebutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="67dp"
        android:text="User Register" />

    <Button
        android:id="@+id/homebutton"
        android:layout_width="117dp"
        android:layout_height="48dp"
        android:text="Home"
        android:textColor="#000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="456dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp" />

    <Button
        android:id="@+id/userbutton"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:text="User"
        android:textColor="#000"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="456dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/homebutton"
        android:layout_toRightOf="@+id/homebutton" />

    <Button
        android:id="@+id/scanbutton"
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:text="Scan"
        android:textColor="#000"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="456dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/userbutton"
        android:layout_toRightOf="@+id/userbutton" />

    <Button
        android:id="@+id/allUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="USER INFO" />


</RelativeLayout>
